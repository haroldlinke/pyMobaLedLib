class PythonCardException :

    def __init__( self, aValue ) :
        self._value = aValue

    def __str__(self) :
        return `self._value`

class AbstractMethodException( PythonCardException ) :

    def __init__( self, aValue ) :
        PythonCardException.__init__( self, aValue )

